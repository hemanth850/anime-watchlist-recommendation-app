{
  "name": "anime-watchlist-recommendation-app",
  "private": true,
  "version": "0.1.0",
  "description": "Anime watchlist and recommendation platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:web": "npm run dev -w @anime-app/web",
    "dev:api": "npm run dev -w @anime-app/api",
    "lint": "npm run lint --workspaces",
    "test": "npm run test -w @anime-app/api",
    "build": "npm run build --workspaces",
    "typecheck": "npm run typecheck --workspaces"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "@eslint/js": "^9.21.0",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.15.0",
    "typescript-eslint": "^8.24.1",
    "typescript": "^5.7.3"
  }
}
